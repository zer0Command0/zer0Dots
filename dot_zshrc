# ~/.zshrc

# === Posting TUI ===
POSTING_BASE="$HOME/.local/share/posting/collections"

# Funzione generica: pt <progetto> <ambiente>
pt() {
  local project="${1:?Specifica il progetto}"
  local env="${2:-staging}"
  local col="$POSTING_BASE/$project"

  if [[ ! -d "$col" ]]; then
    echo "âŒ Collection non trovata: $col"
    echo "   Progetti disponibili:"
    ls "$POSTING_BASE" 2>/dev/null || echo "   (nessuno)"
    return 1
  fi

  local env_args=()
  [[ -f "$col/shared.env" ]] && env_args+=(--env "$col/shared.env")

  local env_file=""
  for candidate in "$col/${env}.env" "$col/${env}ing.env"; do
    [[ -f "$candidate" ]] && env_file="$candidate" && break
  done

  if [[ -n "$env_file" ]]; then
    env_args+=(--env "$env_file")
  else
    echo "âš ï¸  File env non trovato per '$env', carico solo shared.env"
  fi

  echo "ðŸš€ Posting â†’ $project [$env]"
  posting --collection "$col" "${env_args[@]}"
}

# Autocompletamento: tab su progetti e ambienti
_pt_complete() {
  if [[ $CURRENT -eq 2 ]]; then
    local projects=("${(@f)$(ls "$POSTING_BASE" 2>/dev/null)}")
    _describe 'project' projects
  elif [[ $CURRENT -eq 3 ]]; then
    local project="$words[2]"
    local envs=("${(@f)$(ls "$POSTING_BASE/$project"/*.env 2>/dev/null | xargs -I{} basename {} .env)}")
    _describe 'environment' envs
  fi
}
compdef _pt_complete pt

